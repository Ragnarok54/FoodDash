@model FoodDash.Web.Models.Restaurant.RestaurantModel

@{
    ViewData["Title"] = "Add a new restaurant in FoodDash";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section style="padding:40px 0; background-position: center; background-repeat: no-repeat;background-size: cover; background-attachment:fixed;">
    <div class="container">
        <div class="textwidget">
            <i class="fa fa-star roundicon star"></i>
            <div class="contactstyle topform" style="margin-top: 2em">
                <h4 style="text-align: center">
                    @if (Model.RestaurantId > 0)
                    {
                        Html.Raw("Edit restaraunt in FoodDash");
                    }
                    else
                    {
                        Html.Raw("Add a new restaurant in FoodDash");
                    }
                </h4>
                <hr />
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Type" class="control-label"></label>
                        <input asp-for="Type" class="form-control" />
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="DeliveryTime" class="control-label"></label>
                        <input asp-for="DeliveryTime" class="form-control" />
                        <span asp-validation-for="DeliveryTime" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        @if (Model.RestaurantId > 0)
                        {
                            <input type="submit" value="Save changes" class="btn btn-primary" />
                        }
                        else
                        {
                            <input type="submit" value="Add" class="btn btn-primary" />
                        }
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
